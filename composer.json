{
    "name": "drupal/helfi_gredi_image",
    "description": "Gredi Aineistopankki integration",
    "type": "drupal-module",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "require": {
        "drupal/helfi_api_base": "^2.2.0",
        "drupal/views_remote_data": "^1.0",
        "drupal/entity": "^1.4"
    },
    "require-dev": {
        "drupal/coder": "dev-8.x-3.x"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "src/"
            }
        },
        "enable-patching": true
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repository.drupal.hel.ninja"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ]
}
