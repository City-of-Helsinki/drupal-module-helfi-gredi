{
    "name": "drupal/helfi_gredi",
    "description": "Gredi Aineistopankki integration",
    "type": "drupal-module",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "require": {
        "php": "^8.0",
        "drupal/helfi_api_base": "^2.2.0",
        "cweagans/php-webdam-client": "^1.0.1",
        "twistor/stream-util": "dev-master",
        "drupal/media_entity_browser": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit":"^9.1",
        "phpstan/phpstan": "1.8.x-dev",
        "squizlabs/php_codesniffer": "^3.7.1",
        "drupal/coder": "^8.3.13",
        "slevomat/coding-standard": "^8.2"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "src/"
            }
        },
        "enable-patching": true
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repository.drupal.hel.ninja"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ]
}
